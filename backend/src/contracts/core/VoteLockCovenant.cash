pragma cashscript ^0.8.0;

// VoteLockCovenant.cash locks Governance Tokens for voting duration.
// Prevents double-voting by enforcing a timelock on the tokens.

contract VoteLockCovenant(
    bytes32 proposalId,
    int voteChoice,      // 1=FOR, 0=AGAINST, 2=ABSTAIN
    int unlockTimestamp  // When tokens can be reclaimed
) {
    function reclaim() {
        // Only allow reclaiming after election ends
        require(tx.time >= unlockTimestamp);
    }
}
